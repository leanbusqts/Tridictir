<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tridictir" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkback</item>
        <item name="colorPrimaryVariant">@color/darkback</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkword</item>
        <item name="colorSecondaryVariant">@color/darkword</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SplashCustom" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_700</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_tridictir_splash_round</item>
        <item name="postSplashScreenTheme">@style/Theme.Tridictir</item>
    </style>

    <style name="Theme.Tridictir.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tridictir.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.Tridictir.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/darkback</item>
    </style>

    <style name="Theme.Tridictir.Container" parent="Theme.Tridictir">
        <item name="android:background">@color/darkprin</item>
    </style>

    <style name="Theme.Tridictir.Main" parent="Theme.Tridictir">
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:tint">@color/darkblue</item>
    </style>

    <style name="Theme.Tridictir.ViewLine" parent="Theme.Tridictir">
        <item name="android:background">@color/darkword</item>
    </style>

    <style name="Theme.Tridictir.Recycler" parent="Theme.Tridictir">
        <item name="android:background">@color/darkrecy</item>
    </style>

    <style name="Theme.Tridictir.Item" parent="Theme.Tridictir">
        <item name="android:background">@color/darkprin</item>
    </style>

    <style name="Theme.Tridictir.ViewItem" parent="Theme.Tridictir">
        <item name="android:background">@color/darkrecy</item>
    </style>

    <style name="Theme.Tridictir.TextWordItem">
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:textColor">@color/lightword</item>
    </style>

    <style name="Theme.Tridictir.TextWirdItem">
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:textColor">@color/lightrecy</item>
    </style>

    <style name="Theme.Tridictir.ImgCopy" parent="Theme.Tridictir">
        <item name="android:background">@drawable/btn_background_copydark</item>
        <item name="android:tint">@color/darkword</item>
    </style>
</resources>