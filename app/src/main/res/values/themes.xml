<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tridictir" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightback</item>
        <item name="colorPrimaryVariant">@color/lightprin</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkword</item>
        <item name="colorSecondaryVariant">@color/darkprin</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Tridictir.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tridictir.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.Tridictir.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/lightprin</item>
    </style>

    <style name="Theme.Tridictir.Container" parent="Theme.Tridictir">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Tridictir.Main" parent="Theme.Tridictir">
        <item name="android:textColor">@color/lightprin</item>
        <item name="android:tint">@color/lightprin</item>
    </style>

    <style name="Theme.Tridictir.ViewLine" parent="Theme.Tridictir">
        <item name="android:background">@color/lightrecy</item>
    </style>

    <style name="Theme.Tridictir.Recycler" parent="Theme.Tridictir">
        <item name="android:background">@color/lightrecy</item>
    </style>

    <style name="Theme.Tridictir.Item" parent="Theme.Tridictir">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Tridictir.ViewItem" parent="Theme.Tridictir">
        <item name="android:background">@color/lightrecy</item>
    </style>

    <style name="Theme.Tridictir.TextWordItem">
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:textColor">@color/lightword</item>
    </style>

    <style name="Theme.Tridictir.TextWirdItem">
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Tridictir.ImgCopy" parent="Theme.Tridictir">
        <item name="android:background">@drawable/btn_background_copylight</item>
        <item name="android:tint">@color/lightword</item>
    </style>
</resources>